 #include <bits/stdc++.h>

using namespace std;

class Rectangle{

    public:

        int width , height;

        void display()

        {

            cout<<width<<" "<<height<<"\n";

        }

};

class RectangleArea : public Rectangle{

    public:

        void Readinput(){

            cin>>width>>height;

        }

        void display()

        {

            cout<<width*height;

        }

};

int main()

{

  RectangleArea obj;

  

  obj.Readinput();  //CALLING Readinput FUNCTION TO TAKE INOUT FROM USER

  obj.Rectangle::display();  //CALLING Rectangle display FUNCTION

  obj.display();    //DISPLAY RESULT (AREA OF RECTANGLE)

    

    return 0;

}

    



 

